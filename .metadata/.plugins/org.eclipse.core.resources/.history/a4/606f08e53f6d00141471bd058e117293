package escape;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.GridLayout;
import java.awt.Image;

import javax.swing.BorderFactory;
import javax.swing.Icon;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;


public class ImageSpacePanel extends JPanel{
	JPanel[] panelHolder;
	ImagePanel[] ib = new ImagePanel[8];
	ImagePanel[][] imageHolder;

	public ImageSpacePanel() {
		super();
		
	  
		setLayout(new GridLayout(2,4));
		setBackground(Color.BLUE);

		JButton p = new JButton("hi");
		
		panelHolder = new JPanel[8];    

		for(int m = 0; m < 8; m++) {
		   
		      panelHolder[m] = new JPanel();
		      panelHolder[m].setPreferredSize(new Dimension(40,40));
		      panelHolder[m].setBorder(BorderFactory.createLineBorder(Color.BLACK));
		      add(panelHolder[m]);
		   
		}
	
	}
	
	

}

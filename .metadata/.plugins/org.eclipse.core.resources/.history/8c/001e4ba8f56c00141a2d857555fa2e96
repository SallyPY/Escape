package escape;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.GridLayout;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;


public class ImageSpacePanel extends JPanel{
	
	ImageButton[] ib = new ImageButton[8];

	public ImageSpacePanel() {
		super();
		setLayout(new GridLayout(4,2));
		setBackground(Color.BLACK);
		
		
		
		add(new JButton(new ImageIcon(((new ImageIcon("src/images/x.png")).getImage()).getScaledInstance(30, 30, java.awt.Image.SCALE_SMOOTH)))); 
		
		//add(new ImageButton(new ImageIcon(getClass().getResource("src/images/blue.png")), 1));
		//for(int i = 0; i<8; i++){
			//ib[i] = new ImageButton(i);
			//add(ib[i]);
		//}
	}
	
	protected void paintComponent(Graphics g) {
    	super.paintComponent(g);
    	g.drawImage(new ImageIcon("src/images/x.png").getImage(),5,5,null);
    }

}
